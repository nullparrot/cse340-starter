<!-- Content Header -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Message Block -->
<%# messages() %>

<div id="loginBox">
    <form action="none" id="loginForm">
        <label for="account_email">Email:</label>
        <input type="email" name="account_email" id="loginEmail">
        <label for="account_password">Password:</label>
        <input type="password" name="account_password" id="loginPassword">
        <button>Login</button>
    </form>
    <p>No account? <a href="./account/registration">Sign-up</a></p>
</div>