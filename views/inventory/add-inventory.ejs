<!-- Message Block -->
<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- Page Content -->
<div class="accountBox">
  <!-- Content Header -->
  <% if (title) { %>
  <h1><%= title %></h1>
  <% } else { res.redirect('/') } %>
  <form
    action="/inv/add-inventory"
    method="post"
    class="accountForm"
    id="vehicleForm"
  >
    <%- classificationSelector %>
    <label for="inv_make">Make</label>
    <input
      type="text"
      name="inv_make"
      id="inv_make"
      required
      pattern="[A-z0-9 ]+"
      value="<%= locals.inv_make %>"
    />
    <label for="inv_model">Model</label>
    <input
      type="text"
      name="inv_model"
      id="inv_model"
      required
      pattern="[A-z0-9 ]+"
      value="<%= locals.inv_model %>"
    />
    <label for="inv_year">Year</label>
    <input
      type="text"
      name="inv_year"
      id="inv_year"
      required
      pattern="[0-9]{4}"
      value="<%= locals.inv_year %>"
    />
    <label for="inv_description">Description</label>
    <textarea
      name=""
      id=""
      name="inv_description"
      id="inv_description"
      required
      value="<%= locals.inv_description %>"
      cols="30"
      rows="10"
    ></textarea>
    <label for="inv_image">Image Path</label>
    <input
      type="text"
      name="inv_image"
      id="inv_image"
      required
      value="<%= locals.inv_image %>"
    />
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      type="text"
      name="inv_thumbnail"
      id="inv_thumbnail"
      required
      value="<%= locals.inv_thumbnail %>"
    />
    <label for="inv_price">Price</label>
    <input
      type="text"
      name="inv_price"
      id="inv_price"
      required
      pattern="[0-9]+"
      value="<%= locals.inv_price %>"
    />
    <label for="inv_miles">Miles</label>
    <input
      type="text"
      name="inv_miles"
      id="inv_miles"
      required
      pattern="[0-9]+"
      value="<%= locals.inv_miles %>"
    />
    <label for="inv_color">Color</label>
    <input
      type="text"
      name="inv_color"
      id="inv_color"
      required
      pattern="[A-z ]{3,}"
      value="<%= locals.inv_color %>"
    />
    <button>Add</button>
  </form>
</div>
